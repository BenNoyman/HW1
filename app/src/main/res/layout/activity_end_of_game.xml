<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EndOfGameActivity"


    >
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/crashed_plane"
        />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:text="STATUS\nSCORE"
        android:layout_centerInParent="true"
        android:textSize="@dimen/_70dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold |italic"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_Reset_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/reset_game"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/margin_bottom_reset_60dp"
        android:backgroundTint="@color/lightBlue400"
        android:textColor="@color/black"
        />
</RelativeLayout>